<div class="row-fluid">
   <% unless flash[:notice].nil? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %></div>
    <script>$.jGrowl("<%= flash[:notice] %>", {header: 'Important'});</script>
  <% end %>

<h2><%= @categorie.nom %></h2>
<div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Liste des droits de categorie</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        
         <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
          <tbody>
             <% @categorie.droits.all(:conditions=>"is_active=true").each do |c| %>
              
            <tr>
             <td><%=c.name %></td>
                <td><%=c.description%></td>
                
                 <td class="center"><%=link_to "Supprimer",{:controller=>"categories",:action=>"delete_droit",:id=>c.id},:class=>"btn btn-danger" ,:confirm=>"voulez vous vraiment supprimer ce droit dans la catÃ©gorie "+c.name+" ?"%></td> 
            </tr>
              <% end  %>
             </tbody>
        </table>
         </div>
    </div>
</div>
</div>