
  <div class="modal-body">
    <%= form_for @category, remote: true, html: {style: "display: inline;"} do |f| %>
   
    <ul class="errors">
            
          </ul>
    
   
     
      <div class="field">
        
        <%= f.text_field :nom,class: "input-xlarge", "placeholder"=>"Nom Categorie", "required"=>true %>
      </div>
      <div class="field">
        
        <%= f.text_field :description,class: "input-xxlarge", "placeholder"=>"Description" %>
      </div>
     <% if !@category.code.nil?%>
    <div class="field">
        <%= f.label :active %>
        <%= f.check_box :is_active,value: @category.is_active %>
      </div>
    <% end %>
      <div class="modal-footer">
        <%= f.submit  class: "btn btn-large btn-primary" %>
         <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>

