$("ul.errors").html("")
<% if @type_produit.errors.any? %>
  <% @type_produit.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".type_produit-index").html("<%= escape_javascript(render(:partial=>'index') ) %>")
  $("#type_produit-modal").modal("hide")
  $.jGrowl("<%= flash[:notice] %>", {header: ''})
<% end %>