

  <div class="modal-body">
    <%= form_for @type_produit, remote: true, html: {style: "display: inline;"} do |f| %>
   
    <ul class="errors">
            
          </ul>
    <% if @type_produit.code.nil?%>
 <% if TypeProduit.count==0 %>
        <% code="TP0000001" %>
      <% else %>
        <% old_code=TypeProduit.last.code[-7..-1] %>
        <% code="TP"+old_code.next %>
      <% end %>
      <div class="field">
       
        <%= f.text_field :code ,class: "input-large", value: code, readOnly: true %>
      </div>
    <% end %>
      <div class="field">
        
        <%= f.text_field :nom,class: "input-xlarge", "placeholder"=>"Nom Type produit", "required"=>true %>
      </div>
     
     <% if !@type_produit.code.nil?%>
    <div class="field">
        <%= f.label :active %>
        <%= f.check_box :is_active,value: @type_produit.is_active %>
      </div>
    <% end %>
      <div class="modal-footer">
        <%= f.submit  class: "btn btn-large btn-primary" %>
         <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>


