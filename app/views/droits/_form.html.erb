    <%= form_for @droit, remote: true, html: {style: "display: inline;"} do |f| %>
   
    <ul class="errors">
            
          </ul>
    <% if @droit.code.nil?%>
 <% if Droit.count==0 %>
        <% code="DR0000001" %>
