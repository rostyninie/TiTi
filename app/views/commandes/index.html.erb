<div class="row-fluid">
  <% unless flash[:notice].nil? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %></div>
    <script>$.jGrowl("<%= flash[:notice] %>", {header: 'Important'});</script>
  <% end %>
</div>



  
  <div class="row-fluid">
    
    
    <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Effectuer une vente</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12" >
        <div class="row-fluid">
          <div class="span6" id="form_commande">
                <div style="height: 200px; width: 100%; overflow-y: scroll;  margin-right: 0px;">
      <table class="table" id="produits">
        <thead>
          <tr class="tete">
            <th class="hidden">Numero</th>
            <th>Nom</th>
            <th>Pv</th>
            <th>Qte</th>
            <th class="hidden">Quantite en gros</th>
            <th class="hidden">Prix en gros</th>
            <th class="hidden">Unité</th>
            <th class="hidden">Code</th>

          </tr>
        </thead>
       
          <tbody>

            <%@produits.each do |p|%>

              <tr class="info pr">
                <td class="numero hidden"><%= p.id.to_s %></td>
                <td class="nom"><%= p.nom.force_encoding("UTF-8") %></td>
                <td class="prix_vente"><%= p.prix_vente.to_s %></td>
                <td class="quantite">
                    <%if p.achats.count>0%>
                    <%pourc=((p.quantite_stock*100)/(p.achats.last.quantite+p.quantite_stock)).to_i%>
                  <span class="last_achat hidden"><%= p.achats.last.quantite.to_s %></span>
                    <%if pourc>=70%>
                  <div class="progress progress-success">
                    <div style="width: <%= (pourc).to_s+"%" %>;" class="bar"><%= p.quantite_stock.to_s %></div></div>
                    <%elsif pourc>=25 && pourc<70%>
                  <div class="progress progress-warning">
                    <div style="width: <%= (pourc).to_s+"%" %>;" class="bar"><%= p.quantite_stock.to_s %></div></div>
                    <%elsif   pourc<25%>
                  <div class="progress progress-danger">
                    <div style="width: <%= (pourc).to_s+"%" %>;" class="bar"><%= p.quantite_stock.to_s %></div></div>
                    <%end%>
                    <%else%>
                   <div class="progress progress-danger">
                    <div style="width: 0;" class="bar"><%= p.quantite_stock.to_s %></div></div>
                    <%end%>
                  
                 </td>
                
                <td class="quantite_gros hidden"><%= p.quantite_gros.to_s %></td>
                <td class="prix_gros hidden"><%= p.prix_gros.to_s %></td>
                <td class="unite hidden"><%= p.unite.force_encoding("UTF-8") %></td>
                <td class="code hidden"><%= p.code %></td>

              </tr>
            <%end%>

          </tbody>
      </table>
        </div>
      <div class="row-fluid">
 <div class="btn-group">
  <%= text_field_tag :nom,"", id: "nom", placeholder: "nom" %>

</div>
<div class="btn-group">
  <%= text_field_tag :code,"", id: "code", placeholder: "code" %>

</div>
        </div>
            
             <div class="row-fluid">
       <div class="span5" style="padding-bottom: 10px;" >
          <!--<span class="text-center" style="color: #ff9900; font-size: 75px;">TiTi</span>-->
          <img src="/assets/logo_titi1.png"  height="400px">
        </div>
        </div>
    </div>
       
        
  
    <div class="span6" id="form">
   <%= render "form"  %>

 
          </div>
          </div>
       
        </div>
      </div>
      </div>
  </div>

 <div class="block">
