<div class="modal-header">
  <button data-dismiss="modal" class="close" type="button">&times;</button>
  <h3>Liste des produits de la commande :</h3>
</div>
<div class="modal-body">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
    <thead>
      <tr>
        <th>N°</th>
        <th>Code</th>
        <th>Produit</th>
        <th>Quantité</th>
        <th>Stock</th>
        <th>Remise</th>
        <th>Code-barre</th>
        <th>prix de vente</th>
       
      </tr>
    </thead>
    <% i=0 %>
    <tbody >
      <%  @commande.commande_produits.each do |c| %>
        <tr class="odd gradeX">
          <td><%=  i+=1%></td>
          <td><%= @commande.code %></td>
          <td><%= c.produit.nom.force_encoding('UTF-8') %></td>
          <td><%= c.quantite %></td>
          <td><%= c.achat.nil? ? "":c.achat.code %></td>
          <td><%= c.remise %></td>
          <td><%= UniqueProduit.find_by_id(c.unique_produit_id).code %></td>
          <td><%= UniqueProduit.find_by_id(c.unique_produit_id).prix_vente%></td>
          

        </tr>
      <% end %>


    </tbody>
 </table>

</div>