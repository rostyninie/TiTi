$("ul.errors").html("")
<% if @groupe.errors.any?  %>
<% @groupe.errors.full_messages.each do |message|  %>
$("ul.errors").append("$(<li />)").html("<%= message.html_safe %>")
<% end %>
<% else  %>
$(".groupe-index").html("<%= escape_javascript(render(:partial=>"index")) %>")

$("#groupe-modal").modal("hide")
$.jGrowl("<%= flash[:notice] %>", {header : ""})

<%end %>
