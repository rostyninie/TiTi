<div class="modal-header">
    <button data-dismiss="modal" class="close" type="button">&times;</button>
    <h3>Supprimer le produit <%= "#{@produit.nom} ?" %></h3>
  </div>
<div class="modal-body">
  
   <div class="modal-footer">
    <%= link_to "Oui, Supprimer le produit", produit_path(@produit), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "Non", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
</div>