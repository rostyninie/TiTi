$("ul.errors").html("")
<% if @fournisseur.errors.any? %>
  <% @fournisseur.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end%>
<% else %>
$(".fournisseur-index").html("<%= escape_javascript(render(:partial=>'index')) %>")
$("#fournisseur-modal").modal("hide")
$.jGrowl("<%= flash[:notice] %>", {header: ''})
<% end %>
