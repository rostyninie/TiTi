$("ul.errors").html("")
<% if @user.errors.any?  %>
<% @user.errors.full_messages.each do |message|  %>
$("ul.errors").append("$(<li />)").html("<%= message.html_safe %>")
<% end %>
<% else  %>

$(".user-index").html("<%= escape_javascript(render(:partial=>'index')) %>")
$("#user-modal").modal("hide")
$.jGrowl("<%= flash[:notice] %>", {header : ""})

<%end %>
