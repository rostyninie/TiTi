<div class="modal-header">
  <button data-dismiss="modal" class="close" type="button">&times;</button>
  <h3>Création d'un nouveau mot de passe</h3> 
</div>
<div class="modal-body">
  <%= form_for :set_password,url: {controller: "users",action: "verif_admin"}, remote: true, html: {style: "display: inline;"} do |f| %>
  <ul class="errors" style="color: #B00100">
  </ul>
  <%= f.text_field :email, :class=>"input-block-level", :placeholder=>"email d'un administrateur",required: true,id: "email"%>
  <%= f.password_field :passe, :class=>"input-block-level", :placeholder=>"Mot de passe d'un administrateur",required: true,id: "passe"%>
  <button class="btn btn-large btn-primary" type="submit" id="b_submit" onclick="anime();">Continuer &blacktriangleright;</button>
  <%end %>
</div>
<script>
  
  function anime()
  {
    $("ul.errors").html("<img src='/assets/roller.gif'>");
  }
  
  function verif_pass()
  {
    
    var passe=$("#passe").val();
    var verif=$("#verif").val();
    if(passe==verif)
    {
     // alert("ce bon");
     $("ul.errors").html("");
     $("#verif").focus();
    document.getElementById("b_submit").disabled = false;
    }
    else
    {
      //alert("ce pas bon");
      $("ul.errors").append("$(<li />)").html("le vérfié mot de passe est différent du mot de passe");
      $("#verif").focus();
      document.getElementById("b_submit").disabled = true;
    }
  }

  </script>