
<div class="row-fluid">
  <% unless flash[:notice].nil? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %></div>
    <script>$.jGrowl("<%= flash[:notice] %>", {header: 'Important'});</script>
  <% end %>

    
    <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Ajouter les produits de l'achat</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12" id="form_unique">
        <%= render "form_unique_produit"  %>
        </div>
      </div>
      </div>
    
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Liste des produits de l'achat</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <div class="table-toolbar">
          
                   <div class="btn-group pull-right">
            <button data-toggle="dropdown" class="btn dropdown-toggle">Outils <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="#">Print</a></li>
              <li><a href="#">Save as PDF</a></li>
              <li><a href="#">Export to Excel</a></li>
            </ul>
          </div>
        </div>
      
        <div style=" height: 500px; width: 100%; overflow-x: scroll;overflow-y: scroll; " >
          
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
              <thead>
                <tr>
                  <th>N°</th>
                  <th>Code</th>
                  <th>Prix de vente</th>
                  <th>produit</th>
                 <th>Sous-produits</th>
                  <th>Soldé</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                  
                
                </tr>
              </thead>
              <tbody class="unique-index" id="result">
                <%= render "index_unique_produit" %>
              
            
                 </tbody>
            </table>
         
        </div>
      </div>
    </div>
  </div>
</div>

