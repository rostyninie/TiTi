  <div style="display: inline;">
    <%="#{"TEL : "} #{Option.get_config_value('phone')}"%>
  </div>
  <div style="display: inline;">
    <%="#{"   B.P : "} #{Option.get_config_value('adress')}"%>
  </div>
</div>

<div  style="font-size: 30px; width: 100%; overflow: hidden; padding-top: 2px;">
  <div style="display: inline;">
    <%="#{"Email : "} #{Option.get_config_value('email')}" %>
  </div>
</div>
<u>
  <div  style="font-size: 30px; width: 100%; overflow: hidden; padding-top: 15px; padding-left: 250px;">
    <div style="display: inline;">
      <%="#{"LISTE DES MODIFICATIONS APPORTE SUR L'ACHAT : "} " %>

    </div>
  </div>
</u>

<div  style="font-size: 25px; width: 100%; overflow: hidden; padding-top: 15px;">
  <div style="display: inline;">
    <%="#{"Achat : "} #{@achat_histories.first.code}" %><br/> <br/> 
    <%="Produit : #{@achat_histories.first.produit.nom.force_encoding("UTF-8")}" %>

  </div> 

  <div  style="font-size: 20px; width: 100%; overflow: hidden; padding-top: 20px;">
    <table cellpadding="4" cellspacing="1" border="1" class="table table-striped table-bordered" id="example2" style="border-style: dashed;">
      <thead>
        <tr style="border-style: none;">
          <th>N°</th>
          <th style="border-style: dotted;">Code</th>
        <th style="border-style: dotted;">Prix achat unitaire</th>
         <th style="border-style: dotted;">Coût achat</th>
        <th style="border-style: dotted;">Marge brut</th>
        <th style="border-style: dotted;">Prix HT</th>
        <th style="border-style: dotted;">Prix Vente</th>
        <th style="border-style: dotted;">Quantite</th>
        <th style="border-style: dotted;">Raison</th>
        <th style="border-style: dotted;">Date achat</th>
        <th style="border-style: dotted;">Utilisateur</th>
        <th style="border-style: dotted;">Produit</th>

        </tr>
      </thead>
      <tbody class="achat-index" id="result">
        <% i=0 %>
        <% @achat_histories.each do |achat| %>
        <tr class="odd gradeX">
          <td style="border-style: dotted;"><%=  i+=1%></td>
          <td style="border-style: dotted;"><%= achat.code %></td>
          <td style="border-style: dotted;"><%= achat.prix_achat_unitaire %></td>
          <td style="border-style: dotted;"><%= achat.cout_achat %></td>
          <td style="border-style: dotted;"><%= achat.marge_brut %></td>
          <td style="border-style: dotted;"><%= achat.prix_ht %></td>
          <td style="border-style: dotted;"><%= achat.prix_vente %></td>
          <td style="border-style: dotted;"><%= achat.quantite %></td>
          <td style="border-style: dotted;"><%= achat.raison %></td>
          <td style="border-style: dotted;"><%= achat.date_achat %></td>
          <td style="border-style: dotted;"><%= achat.user.nom.force_encoding("UTF-8") %></td>
          <td style="border-style: dotted;"><%=h achat.produit.nom.force_encoding("UTF-8") %></td>

        </tr>
      <% end %>

      </tbody>
    </table>
  </div>